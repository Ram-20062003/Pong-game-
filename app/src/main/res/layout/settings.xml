<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choice">

    <Button
        android:id="@+id/setting_square"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/styling_square"
        android:fontFamily="@font/federant"
        android:text="Square"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/setting_circle"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <Button
        android:id="@+id/setting_circle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/styling_circle"
        android:fontFamily="@font/finger_paint"
        android:text="Circle"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="279dp"
        android:layout_height="72dp"
        android:fontFamily="@font/bigelow_rules"
        android:gravity="center"
        android:text="Select your ball"
        android:textColor="#101010"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323" />

    <Button
        android:id="@+id/save"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:layout_marginBottom="260dp"
        android:background="@color/material_on_surface_stroke"
        android:fontFamily="@font/permanent_marker"
        android:text="ok"
        android:textColor="#02fa02"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_circle"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/home1"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:background="@color/material_on_surface_stroke"
        android:fontFamily="@font/permanent_marker"
        android:text="HOME"
        android:textColor="#f70019"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save"
        app:layout_constraintVertical_bias="0.088" />
</androidx.constraintlayout.widget.ConstraintLayout>